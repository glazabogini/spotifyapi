<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.spotify.MainController">
    <TextField fx:id="searchField" promptText="Enter track name"/>
    <Button text="Search" onAction="#handleSearch"/>

    <TableView fx:id="tracksTable">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="artistColumn" text="Artist" />
            <TableColumn fx:id="albumColumn" text="Album" />
            <TableColumn fx:id="releaseDateColumn" text="Release Date" />
        </columns>
    </TableView>
</VBox>
